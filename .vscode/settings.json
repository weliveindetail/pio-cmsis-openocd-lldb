{
  // The platformio plugin depends on ms-vscode.cpptools, but I'd rather use
  // clangd. In order to avoid collisions between the two, let's disable all
  // cpptools features in this workspace.
  "C_Cpp.autoAddFileAssociations": false,
  "C_Cpp.autocomplete": "Disabled",
  "C_Cpp.codeFolding": "Disabled",
  "C_Cpp.configurationWarnings": "Disabled",
  "C_Cpp.default.enableConfigurationSquiggles": false,
  "C_Cpp.dimInactiveRegions": false,
  "C_Cpp.enhancedColorization": "Disabled",
  "C_Cpp.errorSquiggles": "Disabled",
  "C_Cpp.files.exclude": { "*": true },
  "C_Cpp.intelliSenseEngine": "Disabled",
  "C_Cpp.loggingLevel": "None",
  "C_Cpp.suggestSnippets": false,
  "C_Cpp.workspaceParsingPriority": "low",
  "C_Cpp.vcpkg.enabled": false
}